<OwnersPercentageSelector>:
    layout: layout 

    ScrollView:
        pos_hint: {"x": 0, "top": 1}
        size_hint: 1, 0.8

        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            id: layout 
            cols: 1
            size_hint_y: None
            row_default_height: root.height * 0.1
            height: self.minimum_height

    Button:
        text: "Ok"
        pos_hint: {"x": 0, "top": 0.2}
        size_hint: 0.5, 0.2
        font_size: min(self.height/3, self.width/8)
        on_release: root.okayPressed()

    Button:
        text: "Cancel"
        pos_hint: {"x": 0.5, "top": 0.2}
        size_hint: 0.5, 0.2
        font_size: min(self.height/3, self.width/8)
        on_release: root.cancel()


    