#:import Clipboard kivy.core.clipboard.Clipboard

<ResultsPopup>:
    Label:
        pos_hint: {"x": 0, "top": 1}
        size_hint: 1, 0.8
        font_size: min(self.height/6, self.width/8)
        text: root.text

    Button:
        text: "Copy to clipboard"
        pos_hint: {"x": 0, "top": 0.2}
        size_hint: 0.5, 0.2
        font_size: min(self.height/3, self.width/8)
        on_release: Clipboard.copy(root.text)

    Button:
        text: "Ok"
        pos_hint: {"x": 0.5, "top": 0.2}
        size_hint: 0.5, 0.2
        font_size: min(self.height/3, self.width/8)
        on_release: root.cancel()