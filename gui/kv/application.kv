<AppLayout>:
    realSumInput: realSumInput

    Label:
        text: "Shoplist Analyzer"
        pos_hint: {"x": 0, "top": 1}
        size_hint: 1, 0.05
        font_size: min(self.height/2, self.width/5)

    TextInput:
        id: file_input
        multiline: False
        pos_hint: {"x": 0, "top": 0.95}
        size_hint: 0.8, 0.05
        text_size: self.size
        font_size: min(self.height/2, self.width/5)

    Button:
        text: "Browse file"
        pos_hint: {"x": 0.8, "top": 0.95}
        size_hint: 0.2, 0.05
        font_size: min(self.height/2, self.width/5)
        on_release: root.loadFilePopup()

    ActionButtonsWidget:
        id: actionButtons
        pos_hint: {"x": 0, "top": 0.9}
        size_hint: 1, 0.1
    
    ProductListWidget:
        id: productList
        pos_hint: {"x": 0, "top": 0.8}
        size_hint: 1, 0.7

    Label:
        id: totalSumLabel
        text: "Total sum: {0:.2f}".format(0)
        pos_hint: {"x": 0, "top": 0.1}
        size_hint: 1, 0.05
        font_size: min(self.height/2, self.width/5)

    GridLayout:
        cols: 2
        pos_hint: {"x": 0.2, "top": 0.05}
        size_hint: 0.6, 0.05

        Label:
            text: "Expected sum: "
            font_size: min(self.height/2, self.width/5)
            
        TextInput:
            id: realSumInput
            multiline: False
            text_size: self.size
            font_size: min(self.height/2, self.width/5)
            text: "0.00"
            




    


