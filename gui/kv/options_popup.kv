<OptionsPopup>:
    Label:
        pos_hint: {"x": 0, "top": 1}
        size_hint: 1, 0.3
        text: "Product owners: "
        font_size: min(self.height/3, self.width/10)

    TextInput:
        id: optionsInput
        multiline: True
        pos_hint: {"x": 0.1, "top": 0.7}
        size_hint: 0.8, 0.2
        font_size: min(self.height/3, self.width/5)
        text_size: self.size
        
    Button:
        text: "Ok"
        pos_hint: {"x": 0, "top": 0.2}
        size_hint: 0.5, 0.2
        font_size: min(self.height/3, self.width/5)
        on_release: root.saveOptions()
        

    Button:
        text: "Cancel"
        pos_hint: {"x": 0.5, "top": 0.2}
        size_hint: 0.5, 0.2
        font_size: min(self.height/3, self.width/5)
        on_release: root.cancel()